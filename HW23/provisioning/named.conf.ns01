options {

    // network 
	listen-on port 53 { 192.168.50.10; };
	listen-on-v6 port 53 { ::1; };

    // data
	directory 	"/var/named";
	dump-file 	"/var/named/data/cache_dump.db";
	statistics-file "/var/named/data/named_stats.txt";
	memstatistics-file "/var/named/data/named_mem_stats.txt";

    // server
	recursion yes;
	allow-query     { any; };
    allow-transfer { any; };
    
    // dnssec
	dnssec-enable yes;
	dnssec-validation yes;

    // others
	bindkeys-file "/etc/named.iscdlv.key";
	managed-keys-directory "/var/named/dynamic";
	pid-file "/run/named/named.pid";
	session-keyfile "/run/named/session.key";
};

logging {
        channel default_debug {
                file "data/named.run";
                severity dynamic;
        };
};

// RNDC Control for client
key "rndc-key" {
    algorithm hmac-md5;
    secret "GrtiE9kz16GK+OKKU/qJvQ==";
};
controls {
        inet 192.168.50.10 allow { 192.168.50.15; } keys { "rndc-key"; }; 
};

acl "view1" {
    192.168.50.15/32; //client1    
};

acl "view2" {
    192.168.50.25/32; //client2
};

key "zonetransfer.key" {
    algorithm hmac-md5;
    secret "SB4Db9pJomyKxTNynlAq/g==";
};
	
key "zonetransfer2.key" {
	algorithm hmac-md5;
	secret "w143iTeLn0Pzi0f6L5oaig==";
};

view "view1" {
	match-clients { "view1"; };

	// root zone
	zone "." IN {
		type hint;
		file "named.ca";
	};

	// zones like localhost
	include "/etc/named.rfc1912.zones";
	// root DNSKEY
	include "/etc/named.root.key";

	// labs dns zone
	zone "dns.lab" {
		type master;
		allow-transfer { key "zonetransfer.key"; };
		allow-update { key DHCP_UPDATE; };
		file "/etc/named/named.dns.lab.view1";
	};

	// labs newdns zone
	zone "newdns.lab" {
		type master;
		allow-transfer { key "zonetransfer.key"; };
		file "/etc/named/named.newdns.lab.view1";
	};
	// labs zone reverse
	zone "50.168.192.in-addr.arpa" {
		type master;
		allow-transfer { key "zonetransfer.key"; };
		file "/etc/named/named.dns.lab.rev.view1";
	};
};

view "view2" {
	match-clients { "view2"; };

	// root zone
        zone "." IN {
                type hint;
                file "named.ca";
        };

	// zones like localhost
        include "/etc/named.rfc1912.zones";
        // root DNSKEY
        include "/etc/named.root.key";

	// labs dns zone
        zone "dns.lab" {
                type master;
                allow-transfer { key "zonetransfer2.key"; };
                file "/etc/named/named.dns.lab.view2";
	};

	// labs zone reverse
        zone "50.168.192.in-addr.arpa" {
                type master;
                allow-transfer { key "zonetransfer2.key"; };
                file "/etc/named/named.dns.lab.rev.view2";
        };

};

